@model MotoBikeStore.Models.Coupon
@{ Layout="~/Views/Shared/_Layout.cshtml"; ViewData["Title"]="Tạo mã giảm giá"; }

<div class="container py-4">
  <h3 class="mb-4"><i class="fas fa-plus me-2"></i>Tạo mã giảm giá mới</h3>
  
  <div class="card">
    <div class="card-body">
      <form method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Mã giảm giá <span class="text-danger">*</span></label>
            <input asp-for="Code" class="form-control text-uppercase" placeholder="VD: SUMMER2024" required />
            <small class="text-muted">Chữ in hoa, không dấu</small>
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Mô tả <span class="text-danger">*</span></label>
            <input asp-for="Description" class="form-control" placeholder="VD: Giảm giá mùa hè" required />
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Giảm theo % (0 nếu giảm số tiền cố định)</label>
            <input asp-for="DiscountPercent" type="number" class="form-control" min="0" max="100" />
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Giảm số tiền cố định (0 nếu giảm %)</label>
            <input asp-for="DiscountAmount" type="number" class="form-control" min="0" step="1000" />
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Đơn hàng tối thiểu</label>
            <input asp-for="MinOrderAmount" type="number" class="form-control" min="0" step="1000" />
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Giảm tối đa (chỉ với giảm %)</label>
            <input asp-for="MaxDiscountAmount" type="number" class="form-control" min="0" step="1000" />
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Ngày bắt đầu <span class="text-danger">*</span></label>
            <input asp-for="StartDate" type="date" class="form-control" required />
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Ngày kết thúc <span class="text-danger">*</span></label>
            <input asp-for="EndDate" type="date" class="form-control" required />
          </div>
          
          <div class="col-md-6">
            <label class="form-label">Giới hạn sử dụng (0 = không giới hạn)</label>
            <input asp-for="UsageLimit" type="number" class="form-control" min="0" />
          </div>
          
          <div class="col-md-6">
            <div class="form-check mt-4">
              <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
              <label class="form-check-label" asp-for="IsActive">Kích hoạt ngay</label>
            </div>
          </div>
          
          <div class="col-12">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save me-2"></i>Lưu mã giảm giá
            </button>
            <a href="/Coupons" class="btn btn-secondary ms-2">Hủy</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>