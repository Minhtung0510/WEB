@{ Layout = null; }
<!doctype html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - MotoBike Store</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <link href="/css/site.css" rel="stylesheet">
</head>
<body>
  <!-- Top Bar -->
  <div class="top-bar">
    <div class="container d-flex justify-content-between">
      <div><i class="fas fa-phone"></i> Hotline: 1900-xxxx | <i class="fas fa-envelope ms-2"></i> info@motobike.vn</div>
      <div>
        <a href="#" class="text-white text-decoration-none me-3"><i class="fas fa-user"></i> Đăng nhập</a>
        <a href="#" class="text-white text-decoration-none"><i class="fas fa-user-plus"></i> Đăng ký</a>
      </div>
    </div>
  </div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="fas fa-motorcycle me-2"></i>MotoBike Store</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item"><a class="nav-link active" href="/">Trang chủ</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Xe máy</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Phụ tùng</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Khuyến mãi</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Liên hệ</a></li>
        </ul>
        <form method="get" action="/" class="d-flex align-items-center search-bar">
          <input name="q" class="form-control" placeholder="Tìm kiếm sản phẩm...">
          <button class="btn"><i class="fas fa-search"></i></button>
        </form>
        <a href="/Cart" class="btn btn-outline-danger ms-3 position-relative">
          <i class="fas fa-shopping-cart"></i>
        </a>
      </div>
    </div>
  </nav>

  <main>@RenderBody()</main>

  <footer class="footer">
    <div class="container py-4">
      <div class="row g-4">
        <div class="col-md-4">
          <h5>MotoBike Store</h5>
          <p>Hệ thống phân phối xe máy và phụ tùng chính hãng.</p>
        </div>
        <div class="col-md-2">
          <h6>Thông tin</h6>
          <a href="#" class="footer-link">Về chúng tôi</a>
          <a href="#" class="footer-link">Tin tức</a>
          <a href="#" class="footer-link">Tuyển dụng</a>
          <a href="#" class="footer-link">Liên hệ</a>
        </div>
        <div class="col-md-2">
          <h6>Hỗ trợ</h6><a href="#" class="footer-link">Bảo hành</a>
          <a href="#" class="footer-link">Mua hàng</a>
          <a href="#" class="footer-link">Thanh toán</a>
          <a href="#" class="footer-link">Vận chuyển</a>
        </div>
        <div class="col-md-4">
          <h6>Liên hệ</h6>
          <p><i class="fas fa-map-marker-alt me-2"></i>123 Đường ABC, Quận 1, TP.HCM</p>
          <p><i class="fas fa-phone me-2"></i>1900-xxxx</p>
          <p><i class="fas fa-envelope me-2"></i>support@motobike.vn</p>
        </div>
      </div>
      <hr class="footer-hr">
      <div class="text-center small">&copy; 2024 MotoBike Store</div>
    </div>
  </footer>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
  <script src="/js/site.js"></script>
</body>
</html>